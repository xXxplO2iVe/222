@model IEnumerable<Customer>

@{
    ViewData["Title"] = "Customers";
}

<h1 class="display-4">Customers</h1>
<div>
    <table class="table">
        <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th></th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => customer.CustomerID)</td>
                <td>@Html.DisplayFor(x => customer.Name)</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@customer.CustomerID">Edit</a> | 
                    @if (customer.Locked == false)
                    {
                        <a class="btn btn-primary" asp-action="LockUnlock" asp-route-id="@customer.CustomerID">Lock</a>
                    }
                    else
                    {
                        <a class="btn btn-primary" asp-action="LockUnlock" asp-route-id="@customer.CustomerID">Unlock</a>
                    }
                </td>
            </tr>
        }
    </table>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
